openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]
containerized=true
openshift_release=v3.6
openshift_image_tag=v3.6.0
openshift_public_hostname=ahgoracloud.com.br
openshift_master_default_subdomain=apps.ahgoracloud.com.br
openshift_master_named_certificates=[{"certfile": "/etc/letsencrypt/live/ahgoracloud.com.br-0001/fullchain.pem","keyfile": "/etc/letsencrypt/live/ahgoracloud.com.br-0001/privkey.pem"}]
