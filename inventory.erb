# vim: ft=ansible
[OSEv3:children]
masters
nodes
# etcd

[OSEv3:vars]
ansible_ssh_user=root
deployment_type=origin
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]
containerized=true
openshift_release=v3.6
openshift_image_tag=v3.6.0
openshift_public_hostname=ahgoracloud.com.br
openshift_master_default_subdomain=ahgoracloud.com.br
openshift_master_named_certificates=[{"certfile": "/etc/letsencrypt/live/ahgoracloud.com.br-0001/fullchain.pem","keyfile": "/etc/letsencrypt/live/ahgoracloud.com.br-0001/privkey.pem"}]
openshift_master_overwrite_named_certificates=true
openshift_public_ip=45.79.10.185
openshift_hostname=master.ahgoracloud.com.br
# docker_version=ce
# docker_version=1.12.6
# docker-ce-17.06.0.ce-1.el7.centos.x86_64
# docker_version=ce-17.03.1.ce-1.el7.centos
docker_version=ce-17.06.0.ce-1.el7.centos

# Configure dnsIP in the node config
openshift_dns_ip=192.168.135.96

openshift_install_examples=true
openshift_hosted_router_selector='region=infra'

# openshift_generate_no_proxy_hosts=false

# Deploy metrica
openshift_hosted_metrics_public_url=https://hawkular-metrics.ahgoracloud.com.br/hawkular/metrics
openshift_hosted_metrics_deploy=true
openshift_hosted_metrics_selector='region=infra'
# OK
openshift_hosted_metrics_deployer_version=v3.6.0

# Deploy Logging
openshift_hosted_logging_deploy=true
openshift_hosted_logging_deployer_version=v3.6.0

# Registry
openshift_hosted_registry_selector='region=infra'
openshift_hosted_registry_deploy=true

# Cockpit
osm_use_cockpit=true
osm_cockpit_plugins=['cockpit-kubernetes']

osn_storage_plugin_deps=['ceph','glusterfs']
openshift_master_htpasswd_file=/root/users.htpasswd

openshift_node_debug_level=2

[masters]
master.ahgoracloud.com.br openshift_schedulable=true

